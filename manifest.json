{
  "manifest_version": 3,
  "name": "INSPIRE for Overleaf",
  "version": "2.0.0",
  "description": "Search INSPIRE HEP and cite papers directly in Overleaf. Load your .bib file and insert citations with ease.",
  "author": "INSPIRE for Overleaf Contributors",
  "homepage_url": "https://github.com/yipihey/inspire-for-overleaf",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://inspirehep.net/*",
    "https://*.overleaf.com/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://www.overleaf.com/project/*"],
      "js": ["content/overleaf-injector.js"],
      "css": ["styles/overleaf-panel.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "INSPIRE for Overleaf"
  },

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "commands": {
    "open-citation-picker": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "Open citation picker"
    }
  },

  "default_locale": "en",

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
